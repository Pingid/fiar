{
  "firestore": {
    "rules": "firebase/firebase.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase/firebase.rules"
  },
  "emulators": {
    "firestore": {
      "port": 8001
    },
    "storage": {
      "port": 8002
    },
    "auth": {
      "port": 8003
    },
    "functions": {
      "port": 8004
    }
  },
  "functions": [
    {
      "source": "examples/react/functions",
      "codebase": "default",
      "ignore": ["node_modules", ".git", "firebase-debug.log", "firebase-debug.*.log", "src"],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" install && npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ]
}
