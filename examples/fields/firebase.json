{
  "$schema": "https://raw.githubusercontent.com/firebase/firebase-tools/master/schema/firebase-config.json",
  "firestore": {
    "database": "example-fields",
    "predeploy": "pnpm run generate",
    "rules": "firebase/firestore.rules"
  },
  "storage": {
    "bucket": "fiar-example-fields",
    "predeploy": "pnpm run generate",
    "rules": "firebase/storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099,
      "host": "0.0.0.0"
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "storage": {
      "port": 9199,
      "host": "0.0.0.0"
    },
    "ui": {
      "enabled": false
    }
  }
}
